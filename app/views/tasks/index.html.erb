<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <div class="row">
    <h1>Task一覧ページ</h1>

    <% if @tasks.any? %>
      <table class="table table-striped">
        <thread>
          <tr>
            <th>id</th>
            <th>タスク</th>
            <th>ステータス</th>
          </tr>
        </thread>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.content %></td>
              <td><%= task.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to '新規Taskの投稿', new_task_path, class: 'btn btn-default' %>
      <div>
        <%= paginate @tasks %>
      </div>
    <% else %>
      <%= link_to '新規Taskの投稿', new_task_path, class: 'btn btn-default' %>
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

